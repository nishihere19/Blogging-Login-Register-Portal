extends layout
mixin message(id,name,articles)
    h1.greeting
        span=name
    if(articles)
        table.article
            each item in articles
                tr
                    td  
                        table.posts
                            tr
                                td
                                    span.hd= item.HEADING
                                    
                            tr
                                td
                                    span.cont= item.status
                                    
append links
    li(style="float:right;")
        a(href="/loggout") Logout                      
                        
block content
    table 
        tr
            td.profileimage
                img(src="/img/usericon.png")
                form(action="/follow/"+id method="post")
                    input(type="submit" value= follow)
                .Dashboard
                    .user
                        +message(id,name,articles)
                
                    
                
    